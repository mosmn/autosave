---
/**
 * City landing pages (Arabic â€” default locale).
 * Generates /services/[city] for Riyadh only.
 */
import { getCityBySlug } from '../../data/cities';
import CityTemplate from '../../layouts/CityTemplate.astro';

export function getStaticPaths() {
  const riyadh = getCityBySlug('riyadh');
  if (!riyadh) return [];

  return [{
    params: { city: riyadh.slug },
    props: { city: riyadh },
  }];
}

const { city } = Astro.props;
---

<CityTemplate city={city} lang="ar" />
