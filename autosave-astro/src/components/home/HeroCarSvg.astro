---
/**
 * HeroCarSvg — Animated wireframe car with floating diagnostic service nodes.
 * Desert Luxury design system: gold (#c9a227), copper (#b87333), deep navy (#0c1b2e).
 */
---

<div class="hero-car-svg w-full max-w-[800px] aspect-[8/5]">
  <svg viewBox="0 0 800 500" xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" style="overflow: visible;">
    <defs>
      <!-- Subtle grid background -->
      <pattern id="hero-grid" width="40" height="40" patternUnits="userSpaceOnUse">
        <path d="M 40 0 L 0 0 0 40" fill="none" stroke="#f0ebe0" stroke-width="0.5" stroke-opacity="0.05"/>
      </pattern>

      <!-- Scanner gradient (gold) -->
      <linearGradient id="hero-scanner-grad" x1="0%" y1="0%" x2="100%" y2="0%">
        <stop offset="0%" stop-color="#c9a227" stop-opacity="0" />
        <stop offset="80%" stop-color="#c9a227" stop-opacity="0.15" />
        <stop offset="100%" stop-color="#c9a227" stop-opacity="0.6" />
      </linearGradient>

      <!-- Glow filters -->
      <filter id="hero-glow-gold" x="-20%" y="-20%" width="140%" height="140%">
        <feGaussianBlur stdDeviation="8" result="blur" />
        <feComposite in="SourceGraphic" in2="blur" operator="over" />
      </filter>

      <filter id="hero-glow-copper" x="-20%" y="-20%" width="140%" height="140%">
        <feGaussianBlur stdDeviation="6" result="blur" />
        <feComposite in="SourceGraphic" in2="blur" operator="over" />
      </filter>
    </defs>

    <!-- Background grid -->
    <rect width="100%" height="100%" fill="url(#hero-grid)" rx="24" />

    <!-- Base platform / ground reflection -->
    <ellipse cx="400" cy="425" rx="320" ry="18" fill="#0c1b2e" opacity="0.7" filter="url(#hero-glow-gold)"/>
    <line x1="80" y1="425" x2="720" y2="425" stroke="#c9a227" stroke-width="0.8" opacity="0.25" />
    <!-- Reflected shimmer -->
    <ellipse cx="400" cy="430" rx="220" ry="6" fill="#c9a227" opacity="0.04"/>

    <!-- ===== MAIN CAR SILHOUETTE ===== -->
    <g id="car-body" transform="translate(0, 10)">
      <!-- Subtle body fill for depth -->
      <path
        d="M 130 330 L 130 295 Q 130 275 145 260 L 175 235 Q 195 218 215 208 L 260 188
           Q 295 172 340 165 L 420 160 L 480 160 Q 530 160 565 172 L 610 190
           Q 640 205 660 225 L 685 260 Q 700 280 705 300 L 705 330
           Q 705 340 695 340 L 140 340 Q 130 340 130 330 Z"
        fill="#0c1b2e" opacity="0.5"
      />

      <!-- Outer body wireframe — luxury sedan profile -->
      <path
        d="M 130 330 L 130 295 Q 130 275 145 260 L 175 235 Q 195 218 215 208 L 260 188
           Q 295 172 340 165 L 420 160 L 480 160 Q 530 160 565 172 L 610 190
           Q 640 205 660 225 L 685 260 Q 700 280 705 300 L 705 330
           Q 705 340 695 340 L 140 340 Q 130 340 130 330 Z"
        fill="none" stroke="#c9a227" stroke-width="2" filter="url(#hero-glow-gold)" opacity="0.95"
      />

      <!-- Wheel arches -->
      <path d="M 185 340 Q 185 310 215 295 Q 245 282 275 295 Q 305 310 305 340" fill="none" stroke="#c9a227" stroke-width="1.8" opacity="0.7"/>
      <path d="M 525 340 Q 525 310 555 295 Q 585 282 615 295 Q 645 310 645 340" fill="none" stroke="#c9a227" stroke-width="1.8" opacity="0.7"/>

      <!-- Hood line -->
      <path d="M 610 195 Q 640 210 660 230" fill="none" stroke="#e0d8c8" stroke-width="1" opacity="0.25"/>
      <!-- Trunk line -->
      <path d="M 215 210 Q 195 220 180 238" fill="none" stroke="#e0d8c8" stroke-width="1" opacity="0.25"/>

      <!-- Character / shoulder line -->
      <path d="M 160 270 Q 250 258 400 255 Q 550 258 680 270" fill="none" stroke="#c9a227" stroke-width="1" opacity="0.35"/>

      <!-- Lower body trim line -->
      <path d="M 150 310 Q 300 305 420 305 Q 550 305 690 310" fill="none" stroke="#e0d8c8" stroke-width="0.8" opacity="0.2"/>

      <!-- Window / cabin — A-pillar, roof, C-pillar -->
      <path
        d="M 255 210 Q 275 185 310 173 L 380 165 L 460 165 Q 510 165 545 178
           L 580 195 Q 600 210 615 230 L 610 235 L 250 235 Z"
        fill="rgba(201, 162, 39, 0.04)" stroke="#c9a227" stroke-width="1.5" opacity="0.6"
      />

      <!-- Window divider (B-pillar) -->
      <path d="M 420 167 L 415 235" fill="none" stroke="#c9a227" stroke-width="1.8" opacity="0.4"/>
      <!-- A-pillar accent -->
      <path d="M 260 208 L 310 175" fill="none" stroke="#c9a227" stroke-width="1.2" opacity="0.3"/>
      <!-- C-pillar accent -->
      <path d="M 600 210 L 548 177" fill="none" stroke="#c9a227" stroke-width="1.2" opacity="0.3"/>

      <!-- Door seam lines -->
      <path d="M 350 235 L 345 340" fill="none" stroke="#e0d8c8" stroke-width="1" opacity="0.2"/>
      <path d="M 500 235 L 500 340" fill="none" stroke="#e0d8c8" stroke-width="1" opacity="0.2"/>

      <!-- Door handles -->
      <line x1="365" y1="268" x2="385" y2="268" stroke="#c9a227" stroke-width="2" stroke-linecap="round" opacity="0.5"/>
      <line x1="515" y1="268" x2="535" y2="268" stroke="#c9a227" stroke-width="2" stroke-linecap="round" opacity="0.5"/>

      <!-- Side mirror -->
      <path d="M 250 228 Q 242 222 238 228 L 236 238 Q 238 244 246 240 Z" fill="none" stroke="#c9a227" stroke-width="1.5" opacity="0.55"/>

      <!-- ===== HEADLIGHT (front-right) ===== -->
      <g>
        <!-- Headlight housing -->
        <path d="M 680 255 Q 695 250 702 260 Q 705 270 700 280 Q 690 278 680 272 Z"
              fill="rgba(201, 162, 39, 0.08)" stroke="#c9a227" stroke-width="1.5" opacity="0.8"/>
        <!-- DRL accent -->
        <path d="M 682 260 Q 696 256 700 264" fill="none" stroke="#e8c547" stroke-width="2" stroke-linecap="round" opacity="0.9" filter="url(#hero-glow-gold)"/>
        <!-- Light beam glow -->
        <ellipse cx="700" cy="266" rx="6" ry="3" fill="#c9a227" opacity="0.15" filter="url(#hero-glow-gold)"/>
      </g>

      <!-- ===== TAILLIGHT (rear-left) ===== -->
      <g>
        <!-- Taillight housing -->
        <path d="M 148 265 Q 138 260 135 270 Q 133 280 138 288 Q 148 285 152 278 Z"
              fill="rgba(192, 57, 43, 0.12)" stroke="#c0392b" stroke-width="1.5" opacity="0.85"/>
        <!-- LED strip -->
        <path d="M 140 268 Q 136 275 139 283" fill="none" stroke="#c0392b" stroke-width="2.5" stroke-linecap="round" opacity="0.9"/>
        <!-- Glow -->
        <ellipse cx="138" cy="276" rx="5" ry="8" fill="#c0392b" opacity="0.1" filter="url(#hero-glow-copper)"/>
      </g>

      <!-- Front grille lines -->
      <g opacity="0.3">
        <line x1="695" y1="282" x2="695" y2="300" stroke="#c9a227" stroke-width="1"/>
        <line x1="700" y1="280" x2="700" y2="305" stroke="#c9a227" stroke-width="1"/>
        <line x1="690" y1="284" x2="690" y2="298" stroke="#c9a227" stroke-width="1"/>
      </g>

      <!-- Rear bumper accent -->
      <path d="M 135 295 Q 132 310 135 325" fill="none" stroke="#b87333" stroke-width="1.5" opacity="0.35"/>
    </g>

    <!-- ===== WHEELS ===== -->
    <!-- Back wheel -->
    <g transform="translate(245, 360)">
      <circle cx="0" cy="0" r="42" fill="#060e1a" />
      <!-- Tire -->
      <circle cx="0" cy="0" r="42" fill="none" stroke="#c9a227" stroke-width="1.5" opacity="0.6"/>
      <circle cx="0" cy="0" r="38" fill="none" stroke="#c9a227" stroke-width="0.5" opacity="0.25"/>
      <!-- Rim -->
      <circle cx="0" cy="0" r="28" fill="none" stroke="#b87333" stroke-width="2" opacity="0.55"/>
      <!-- Spoke pattern -->
      <g class="hero-wheel-spin">
        <circle cx="0" cy="0" r="10" fill="#0c1b2e" stroke="#c9a227" stroke-width="1.5" opacity="0.8"/>
        <circle cx="0" cy="0" r="5" fill="#c9a227" opacity="0.6"/>
        <!-- 5-spoke design -->
        <path d="M 0 -28 L 0 -10 M 0 10 L 0 28" stroke="#c9a227" stroke-width="1.5" opacity="0.5"/>
        <path d="M -26.6 -8.6 L -9.5 -3.1 M 9.5 3.1 L 26.6 8.6" stroke="#c9a227" stroke-width="1.5" opacity="0.5"/>
        <path d="M -16.5 -22.7 L -5.9 -8.1 M 5.9 8.1 L 16.5 22.7" stroke="#c9a227" stroke-width="1.5" opacity="0.5"/>
        <path d="M 16.5 -22.7 L 5.9 -8.1 M -5.9 8.1 L -16.5 22.7" stroke="#c9a227" stroke-width="1.5" opacity="0.5"/>
        <path d="M 26.6 -8.6 L 9.5 -3.1 M -9.5 3.1 L -26.6 8.6" stroke="#c9a227" stroke-width="1.5" opacity="0.5"/>
      </g>
    </g>

    <!-- Front wheel -->
    <g transform="translate(585, 360)">
      <circle cx="0" cy="0" r="42" fill="#060e1a" />
      <!-- Tire -->
      <circle cx="0" cy="0" r="42" fill="none" stroke="#c9a227" stroke-width="1.5" opacity="0.6"/>
      <circle cx="0" cy="0" r="38" fill="none" stroke="#c9a227" stroke-width="0.5" opacity="0.25"/>
      <!-- Rim -->
      <circle cx="0" cy="0" r="28" fill="none" stroke="#b87333" stroke-width="2" opacity="0.55"/>
      <!-- Spoke pattern -->
      <g class="hero-wheel-spin">
        <circle cx="0" cy="0" r="10" fill="#0c1b2e" stroke="#c9a227" stroke-width="1.5" opacity="0.8"/>
        <circle cx="0" cy="0" r="5" fill="#c9a227" opacity="0.6"/>
        <!-- 5-spoke design -->
        <path d="M 0 -28 L 0 -10 M 0 10 L 0 28" stroke="#c9a227" stroke-width="1.5" opacity="0.5"/>
        <path d="M -26.6 -8.6 L -9.5 -3.1 M 9.5 3.1 L 26.6 8.6" stroke="#c9a227" stroke-width="1.5" opacity="0.5"/>
        <path d="M -16.5 -22.7 L -5.9 -8.1 M 5.9 8.1 L 16.5 22.7" stroke="#c9a227" stroke-width="1.5" opacity="0.5"/>
        <path d="M 16.5 -22.7 L 5.9 -8.1 M -5.9 8.1 L -16.5 22.7" stroke="#c9a227" stroke-width="1.5" opacity="0.5"/>
        <path d="M 26.6 -8.6 L 9.5 -3.1 M -9.5 3.1 L -26.6 8.6" stroke="#c9a227" stroke-width="1.5" opacity="0.5"/>
      </g>
    </g>

    <!-- ===== DIAGNOSTIC SCANNER ===== -->
    <g class="hero-scanner">
      <rect x="0" y="100" width="80" height="300" fill="url(#hero-scanner-grad)" />
      <line x1="80" y1="100" x2="80" y2="400" stroke="#c9a227" stroke-width="2" filter="url(#hero-glow-gold)" />
      <circle cx="80" cy="250" r="4" fill="#ffffff" filter="url(#hero-glow-gold)"/>
    </g>

    <!-- ===== FLOATING SERVICE NODES ===== -->

    <!-- Node 1: Diagnostics & Electrical (Copper) -->
    <g transform="translate(180, 140)">
      <g class="hero-node-3">
        <path d="M 60 100 L 0 0" class="hero-flow-line" fill="none" stroke="#b87333" stroke-width="1.5" opacity="0.8"/>
        <circle cx="60" cy="100" r="5" fill="#b87333" class="hero-pulse-copper" />

        <circle cx="0" cy="0" r="30" fill="#0c1b2e" stroke="#b87333" stroke-width="2" filter="url(#hero-glow-copper)"/>
        <!-- CPU / Diagnostics icon -->
        <rect x="-12" y="-12" width="24" height="24" rx="3" fill="none" stroke="#b87333" stroke-width="2" />
        <rect x="-6" y="-6" width="12" height="12" fill="#b87333" />
        <!-- Pins -->
        <path d="M -16 -6 h 4 M -16 0 h 4 M -16 6 h 4 M 12 -6 h 4 M 12 0 h 4 M 12 6 h 4 M -6 -16 v 4 M 0 -16 v 4 M 6 -16 v 4 M -6 12 v 4 M 0 12 v 4 M 6 12 v 4" stroke="#b87333" stroke-width="2" stroke-linecap="round"/>

        <text x="0" y="-42" fill="#f0ebe0" font-family="Outfit, sans-serif" font-size="13" font-weight="700" letter-spacing="1" text-anchor="middle">DIAGNOSTICS</text>
        <text x="0" y="-56" fill="#b87333" font-family="'IBM Plex Sans Arabic', sans-serif" font-size="11" font-weight="400" text-anchor="middle">فحص الكمبيوتر</text>
      </g>
    </g>

    <!-- Node 2: A/C & Climate (Gold) -->
    <g transform="translate(420, 60)">
      <g class="hero-node-2">
        <path d="M -40 130 L 0 0" class="hero-flow-line" fill="none" stroke="#c9a227" stroke-width="1.5" opacity="0.8"/>
        <circle cx="-40" cy="130" r="5" fill="#c9a227" class="hero-pulse-gold" />

        <circle cx="0" cy="0" r="30" fill="#0c1b2e" stroke="#c9a227" stroke-width="2" filter="url(#hero-glow-gold)"/>
        <!-- Snowflake / AC icon -->
        <g stroke="#c9a227" stroke-width="2" stroke-linecap="round">
          <line x1="0" y1="-15" x2="0" y2="15" />
          <line x1="-13" y1="-7.5" x2="13" y2="7.5" />
          <line x1="-13" y1="7.5" x2="13" y2="-7.5" />
          <path d="M -5 -15 L 0 -10 L 5 -15 M -15 -5 L -10 0 L -15 5 M 15 -5 L 10 0 L 15 5 M -5 15 L 0 10 L 5 15" fill="none" />
        </g>
        <text x="0" y="-42" fill="#f0ebe0" font-family="Outfit, sans-serif" font-size="13" font-weight="700" letter-spacing="1" text-anchor="middle">A/C SYSTEM</text>
        <text x="0" y="-56" fill="#c9a227" font-family="'IBM Plex Sans Arabic', sans-serif" font-size="11" font-weight="400" text-anchor="middle">نظام التكييف</text>
      </g>
    </g>

    <!-- Node 3: Engine & Oil (Copper) -->
    <g transform="translate(620, 120)">
      <g class="hero-node-1">
        <path d="M 30 140 L 0 0" class="hero-flow-line" fill="none" stroke="#b87333" stroke-width="1.5" opacity="0.8"/>
        <circle cx="30" cy="140" r="5" fill="#b87333" class="hero-pulse-copper" />

        <circle cx="0" cy="0" r="30" fill="#0c1b2e" stroke="#b87333" stroke-width="2" filter="url(#hero-glow-copper)"/>
        <!-- Oil drop icon -->
        <path d="M 0 -12 C 10 0, 12 10, 12 15 C 12 22, 6 25, 0 25 C -6 25, -12 22, -12 15 C -12 10, -10 0, 0 -12 Z" fill="#b87333" />
        <text x="0" y="-42" fill="#f0ebe0" font-family="Outfit, sans-serif" font-size="13" font-weight="700" letter-spacing="1" text-anchor="middle">ENGINE & OIL</text>
        <text x="0" y="-56" fill="#b87333" font-family="'IBM Plex Sans Arabic', sans-serif" font-size="11" font-weight="400" text-anchor="middle">المحرك والزيت</text>
      </g>
    </g>
  </svg>
</div>

<style>
  /* ===== SVG Animation Keyframes ===== */
  @keyframes heroScanline {
    0%   { transform: translateX(-100px); opacity: 0; }
    10%  { opacity: 1; }
    90%  { opacity: 1; }
    100% { transform: translateX(800px); opacity: 0; }
  }

  @keyframes heroFloatUpDown {
    0%, 100% { transform: translateY(0); }
    50%      { transform: translateY(-15px); }
  }

  @keyframes heroFloatDownUp {
    0%, 100% { transform: translateY(0); }
    50%      { transform: translateY(15px); }
  }

  @keyframes heroPulseCopper {
    0%, 100% { filter: drop-shadow(0 0 5px rgba(184, 115, 51, 0.5)); opacity: 0.8; }
    50%      { filter: drop-shadow(0 0 15px rgba(184, 115, 51, 1)); opacity: 1; }
  }

  @keyframes heroPulseGold {
    0%, 100% { filter: drop-shadow(0 0 5px rgba(201, 162, 39, 0.5)); opacity: 0.8; }
    50%      { filter: drop-shadow(0 0 15px rgba(201, 162, 39, 1)); opacity: 1; }
  }

  @keyframes heroSpinSlow {
    100% { transform: rotate(360deg); }
  }

  @keyframes heroDashFlow {
    to { stroke-dashoffset: -32; }
  }

  /* ===== Animation Classes ===== */
  .hero-scanner      { animation: heroScanline 4s cubic-bezier(0.4, 0, 0.2, 1) infinite; }
  .hero-node-1       { animation: heroFloatUpDown 4s ease-in-out infinite; }
  .hero-node-2       { animation: heroFloatDownUp 5s ease-in-out infinite; }
  .hero-node-3       { animation: heroFloatUpDown 4.5s ease-in-out infinite; }
  .hero-pulse-copper { animation: heroPulseCopper 2.5s infinite; transform-origin: center; }
  .hero-pulse-gold   { animation: heroPulseGold 2s infinite; transform-origin: center; }
  .hero-wheel-spin   { transform-origin: center; animation: heroSpinSlow 10s linear infinite; }
  .hero-flow-line    { stroke-dasharray: 8 8; animation: heroDashFlow 1s linear infinite; }

  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .hero-scanner,
    .hero-node-1,
    .hero-node-2,
    .hero-node-3,
    .hero-pulse-copper,
    .hero-pulse-gold,
    .hero-wheel-spin,
    .hero-flow-line {
      animation: none;
    }
  }
</style>
